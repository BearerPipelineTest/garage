.span3
  = render 'nav'
.span9
  %h1= @doc.resource
  - if @examples
    %h2 Examples
    %ul
      - @examples.each do |example|
        %li= link_to example.url, console_resources_path(:location => example.url, :method => "GET")
  %h2 Resources
  - @doc.sections.each do |section|
    %h3= section.title
    .description= section.markup
    %hr
